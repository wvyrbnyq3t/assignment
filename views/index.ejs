<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>カレンダーアプリ</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/reset.css">
    <link rel="stylesheet" href="/static/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  </head>
  <body>
    <main>
      <div class="manage-schedule container">
        <h2 class="container-ttl">
          スケジュール一覧
        </h2>
        <ul class="list">
          <% for (const data of a) { %>
          <li class="list-item">
            <p>
              <%= data[0] %>
            </p>
            <p class="ttl">
              <%= data[1] %>
            </p>
            <p>
              <%= data[2] %>
            </p>
          </li>
          <% } %>
        </ul>
      </div>
      <div class="controls container">
        <h2 class="container-ttl">
          スケジュール追加
        </h2>
        <ul>
          <li>
            <label for="js-schedule-date">
              日にち
            </label>
            <input type="date" id="js-schedule-date">
          </li>
          <li>
            <label for="js-schedule-ttl">
              タイトル
            </label>
            <input type="text" id="js-schedule-ttl" placeholder="タイトルを入力">
          </li>
          <li>
            <label for="js-schedule-memo">
              メモ
            </label>
            <input type="text" id="js-schedule-memo" placeholder="メモを入力">
          </li>
        </ul>
        <button type="submit" id="js-addBtn">
          登録する
        </button>
      </div>
    </main>
    <script src="/static/index.js" defer></script>
  </body>
</html>